<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#141C1E"
    android:padding="20dp">


    <TextView
        android:id="@+id/text_popup_result"
        style="@style/GameoverText"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:paddingBottom="10dp"
        android:text="End Msg"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_popup_stats" />

    <TextView
        android:id="@+id/textView2"
        style="@style/GameoverText"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="Statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/GameoverText"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="graph of attempts?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_popup_stats" />

    <TextView
        android:id="@+id/text_popup_stats"
        style="@style/GameoverText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Played | win% | Streak | max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ScrollView
        android:layout_width="211dp"
        android:layout_height="119dp"
        tools:layout_editor_absoluteX="1dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="97dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>